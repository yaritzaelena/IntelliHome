<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="369dp"
        android:layout_height="306dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="136dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="368dp"
            android:layout_height="280dp"
            app:srcCompat="@drawable/esquema_casa" />

        <View
            android:id="@+id/viewBano"
            android:layout_width="75dp"
            android:layout_height="42dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            tools:layout_marginTop="110dp" />

        <View
            android:id="@+id/viewCorredor"
            android:layout_width="212dp"
            android:layout_height="42dp"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="8dp"
            tools:layout_marginTop="110dp" />

        <View
            android:id="@+id/viewGaraje"
            android:layout_width="75dp"
            android:layout_height="109dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            tools:layout_marginTop="159dp" />

        <View
            android:id="@+id/viewSala"
            android:layout_width="101dp"
            android:layout_height="104dp"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="8dp"
            tools:layout_marginTop="159dp" />

        <View
            android:id="@+id/viewCocina"
            android:layout_width="102dp"
            android:layout_height="77dp"
            android:layout_marginLeft="219dp"
            android:layout_marginTop="8dp"
            tools:layout_marginTop="159dp" />

        <View
            android:id="@+id/viewBano2"
            android:layout_width="49dp"
            android:layout_height="99dp"
            android:layout_marginLeft="278dp"
            android:layout_marginTop="8dp" />

        <View
            android:id="@+id/viewHabitacion1"
            android:layout_width="122dp"
            android:layout_height="99dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp" />

        <View
            android:id="@+id/viewHabitacion2"
            android:layout_width="119dp"
            android:layout_height="99dp"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="8dp" />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="18dp"
        android:layout_height="729dp"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        tools:layout_editor_absoluteY="1dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="19dp"
        android:layout_height="725dp"
        app:layout_constraintStart_toEndOf="@+id/frameLayout"
        tools:layout_editor_absoluteY="5dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar" />

        <Button
            android:id="@+id/buttonIncendio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ Incendio"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp" />
    </TableRow>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="366dp"
        android:layout_height="61dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/tableRow"
        tools:layout_editor_absoluteX="27dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
