<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/blue_very_light">

    <!-- Logo IntelliHome -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/intellihome"
        android:contentDescription="Logo de IntelliHome"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"/>

    <!-- Contenedor de búsqueda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="5dp"
        android:elevation="4dp">

        <!-- Cuadro de búsqueda -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar..."
            android:background="@null"
            android:padding="10dp"
            android:textSize="16sp"
            android:inputType="text"/>

        <!-- Botón de filtro dentro del cuadro -->
        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/filtrado"
            android:background="@android:color/transparent"
            android:contentDescription="Filtrar opciones"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</LinearLayout>


