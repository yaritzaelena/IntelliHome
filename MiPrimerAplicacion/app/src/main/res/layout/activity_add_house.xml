<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="132dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:contentDescription="Logo"
            android:src="@mipmap/logotrans" />

        <!-- Imagen destacada con botón (+) para añadir fotos -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/buttonAddPhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/ic_add"
                android:contentDescription="Agregar Foto"/>
        </RelativeLayout>

        <!-- Ubicación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Botón para abrir el mapa -->
            <Button
                android:id="@+id/buttonOpenMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_button"
                android:text="Seleccionar ubicación en el mapa"
                android:textColor="@color/white" />

            <!-- Texto para mostrar la dirección o coordenadas -->
            <TextView
                android:id="@+id/textViewCoordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:text="Coordenadas: (latitud, longitud)"
                android:textColor="@color/text_color" />
        </LinearLayout>


        <!-- Características -->
        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Descripción de la propiedad"
            android:gravity="top"
            android:background="@drawable/border_rectangle"
            android:padding="10dp"/>

        <!-- Reglas de uso -->
        <EditText
            android:id="@+id/editTextRules"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Reglas de uso"
            android:gravity="top"
            android:background="@drawable/border_rectangle"
            android:padding="10dp"/>

        <!-- Precio por noche -->
        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio por noche ($)"
            android:inputType="numberDecimal"
            android:background="@drawable/border_rectangle"/>

        <!-- Capacidad -->
        <EditText
            android:id="@+id/editTextCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Capacidad máxima (personas)"
            android:inputType="number"
            android:background="@drawable/border_rectangle"/>

        <LinearLayout
            android:id="@+id/amenitiesSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona las amenidades disponibles:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <CheckBox android:id="@+id/check_cocina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cocina equipada (con electrodomésticos modernos)" />

            <CheckBox android:id="@+id/check_aire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aire acondicionado" />

            <CheckBox android:id="@+id/check_calefaccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calefacción" />

            <CheckBox android:id="@+id/check_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wi-Fi gratuito" />

            <CheckBox android:id="@+id/check_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Televisión por cable o satélite" />

            <CheckBox android:id="@+id/check_lavadora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lavadora y secadora" />

            <CheckBox android:id="@+id/check_piscina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piscina" />

            <CheckBox android:id="@+id/check_jardin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jardín o patio" />

            <CheckBox android:id="@+id/check_barbacoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barbacoa o parrilla" />

            <CheckBox android:id="@+id/check_terraza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terraza o balcón" />

            <CheckBox android:id="@+id/check_gimnasio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gimnasio en casa" />

            <CheckBox android:id="@+id/check_garaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garaje o espacio de estacionamiento" />

            <CheckBox android:id="@+id/check_seguridad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistema de seguridad" />

            <CheckBox android:id="@+id/check_habitaciones_bano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habitaciones con baño en suite" />

            <CheckBox android:id="@+id/check_muebles_exterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muebles de exterior" />

            <CheckBox android:id="@+id/check_microondas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Microondas" />

            <CheckBox android:id="@+id/check_lavavajillas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lavavajillas" />

            <CheckBox android:id="@+id/check_cafetera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cafetera" />

            <CheckBox android:id="@+id/check_ropa_cama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ropa de cama y toallas incluidas" />

            <CheckBox android:id="@+id/check_acceso_areas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acceso a áreas comunes (piscina, gimnasio)" />

            <CheckBox android:id="@+id/check_camas_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camas adicionales o sofá cama" />

            <CheckBox android:id="@+id/check_servicio_limpieza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios de limpieza opcionales" />

            <CheckBox android:id="@+id/check_transporte_publico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acceso a transporte público cercano" />

            <CheckBox android:id="@+id/check_mascotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mascotas permitidas" />

            <CheckBox android:id="@+id/check_tiendas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cercanía a tiendas y restaurantes" />

            <CheckBox android:id="@+id/check_suelo_radiantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistema de calefacción por suelo radiante" />

            <CheckBox android:id="@+id/check_escritorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escritorio o área de trabajo" />

            <CheckBox android:id="@+id/check_entretenimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistemas de entretenimiento (videojuegos, equipo de música)" />

            <CheckBox android:id="@+id/check_chimenea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chimenea" />

            <CheckBox android:id="@+id/check_internet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acceso a internet de alta velocidad" />

        </LinearLayout>
        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar mi casa"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:layout_marginTop="16dp" />
    </LinearLayout>


</ScrollView>
