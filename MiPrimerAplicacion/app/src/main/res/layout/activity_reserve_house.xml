<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Título -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserva una Casa"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <!-- Botón para seleccionar fechas -->
    <Button
        android:id="@+id/buttonSelectDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Fechas"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="16dp"/>

    <!-- Texto de fechas seleccionadas -->
    <TextView
        android:id="@+id/textViewSelectedDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fechas no seleccionadas"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_below="@id/buttonSelectDates"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        android:textAlignment="center"/>

    <!-- Botón para confirmar reserva -->
    <Button
        android:id="@+id/buttonConfirmReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Reserva"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:layout_below="@id/textViewSelectedDates"
        android:layout_marginTop="16dp"/>

    <!-- Volver -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:layout_below="@id/buttonConfirmReservation"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
